        function init() {
            var sName, sDescription;
            var i, j;

            try {
                sName = unescape(location.href)

                i = sName.lastIndexOf(".")
                if (i >= 0) { sName = sName.substring(1, i); }

                i = sName.lastIndexOf("/")
